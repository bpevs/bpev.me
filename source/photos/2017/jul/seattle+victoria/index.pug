- var baseURL = "https://benpev.nyc3.digitaloceanspaces.com"


mixin image(src)
  a.pv2.db.no-underline.black.overflow-hidden(href = baseURL + "/photos/2017/july/" + src)
    img.dm.w-100.grow(src = baseURL + "/thumbnails/2017/july/" + src)


doctype html
html(lang="en")
  include ../../../../components/head.pug

  body.helvetica.bg-dark-gray.white
    main.cf.pa2
      h1.f-headline.sans-serif.fw2.tracked.tc Seattle and Victoria Island
      br

      div.fl.w-100.w-50-l.ph2
        - for (var i = 1; i < 12; ++i) {
          +image("SEA_" + i + ".jpg")
        - }


      div.fl.w-100.w-50-l.ph2
        - for (var i = 12; i < 25; ++i) {
          +image("SEA_" + i + ".jpg")
        - }
