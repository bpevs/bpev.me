- var baseURL = "https://benpev.nyc3.digitaloceanspaces.com"


mixin image(src)
  a.pv2.db.no-underline.black.overflow-hidden(href = baseURL + "/photos/2017/december/" + src)
    img.dm.w-100.grow(src = baseURL + "/thumbnails/2017/december/" + src)


doctype html
html(lang="en")
  include ../../../../components/head.pug

  body.helvetica.bg-dark-gray.white
    main.cf.pa2
      h1.f-headline.sans-serif.fw2.tracked.tc San Francisco
      br

      div.fl.w-100.w-50-l.ph2
        - for (var i = 1; i < 35; ++i) {
          +image("SF_" + i + ".jpg")
        - }

      div.fl.w-100.w-50-m.w-25-l.ph2
        - for (var i = 35; i < 89; ++i) {
          +image("SF_" + i + ".jpg")
        - }

      div.fl.w-100.w-50-m.w-25-l.ph2
        - for (var i = 89; i <= 144; ++i) {
          +image("SF_" + i + ".jpg")
        - }
