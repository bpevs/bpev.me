{
  "name": "benpevsner.com",
  "version": "1.0.0",
  "description": "A homepage or something",
  "main": "index.html",
  "homepage": "http://benpevsner.com",
  "author": "Ben Pevsner",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivebencrazy/benpevsner.com.git"
  },
  "scripts": {
    "deploy": "CI=true npm run build",
    "start": "npm-run-all -p build serve watch",
    "postbuild": "cp ./build/index.html ./build/404.html",
    "prebuild": "mkdir -p ./build",
    "build": "npm-run-all -p build:*",
    "build:photos": "mkdir -p build/assets/photos && sharp -i ./source/assets/photos/**/* -o ./build/assets/photos/{name}{ext} --optimize ",
    "build:markup": "pug ./source --out ./build",
    "build:styles": "stylus ./source -o ./build",
    "build:thumbnails": "mkdir -p build/assets/thumbnails && sharp -i ./source/assets/photos/**/* -o ./build/assets/thumbnails/{name}{ext} --optimize resize 1000 600 --max --kernel lanczos2",
    "serve": "static ./build",
    "watch": "npm-run-all -p watch:*",
    "watch:assets": "onchange './source/assets/**/*' -- npm run build:photos & npm run build:thumbnails",
    "watch:markup": "onchange './source/**/*.pug' -- npm run build:markup",
    "watch:styles": "onchange './source/**/*.styl' -- npm run build:styles"
  },
  "devDependencies": {
    "node-static": "^0.7.10",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "pug": "^2.0.1",
    "pug-cli": "^1.0.0-alpha6",
    "sharp": "^0.20.1",
    "sharp-cli": "^1.7.0",
    "stylus": "^0.54.5"
  }
}
