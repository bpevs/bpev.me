{
  "name": "benpevsner.com",
  "version": "2.0.0",
  "author": "Ben Pevsner",
  "description": "Personal Website",
  "license": "MIT",
  "main": "server.js",
  "repository": "git+https://github.com/ivebencrazy/benpevsner.com.git",
  "scripts": {
    "build": "next build",
    "build:blog": "blog-o-matic --in=./blog-content --out=./static/blog",
    "postinstall": "npm run build",
    "start": "NODE_ENV=production node server.js -p $PORT",
    "start:dev": "node server.js -p $PORT",
    "test": "npm-run-all -p test:*",
    "test:lint": "tslint --project ./tsconfig.json",
    "test:unit": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "@civility/stylesheets": "0.0.6",
    "@civility/utilities": "0.0.6",
    "autoprefixer": "^9.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "blog-o-matic": "^3.0.3",
    "express": "^4.16.4",
    "highlight.js": "^9.13.0",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.11",
    "marksy": "^6.1.0",
    "next": "^7.0.2",
    "npm-run-all": "^4.1.3",
    "nprogress": "^0.2.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "raw-loader": "^0.5.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.117",
    "@types/next": "^7.0.3",
    "@types/nprogress": "0.0.29",
    "@types/react": "^16.4.18",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.4"
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "corejs": false,
          "helpers": true,
          "regenerator": true,
          "useESModules": false
        }
      ],
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint build",
      "pre-publish": "npm-run-all test build"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "components/**/*.js",
      "pages/**/*.js",
      "utilities/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "constants",
      "vendor",
      ".test.js",
      ".d.ts$"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupFiles": [
      "<rootDir>/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "**/*.test.(js|jsx)"
    ]
  }
}
