{
  "name": "benpevsner.com",
  "version": "2.0.1",
  "author": "Ben Pevsner",
  "description": "Personal Website",
  "license": "MIT",
  "main": "server.js",
  "repository": "git+https://github.com/ivebencrazy/benpevsner.com.git",
  "scripts": {
    "build": "next build",
    "build:blog": "blog-o-matic --in=./blog-content --out=./static/blog",
    "postinstall": "npm run build",
    "start": "NODE_ENV=production node server.js -p $PORT",
    "dev": "node server.js -p $PORT",
    "test": "npm-run-all -p test:lint build",
    "test:lint": "tslint --project ./tsconfig.json"
  },
  "dependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.1.5",
    "@civility/firebase": "^0.1.1",
    "@civility/react": "^0.1.3",
    "@civility/store": "^0.1.3",
    "@civility/stylesheets": "^0.1.3",
    "@civility/utilities": "^0.1.3",
    "autoprefixer": "^9.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "express": "^4.16.4",
    "firebase": "^5.6.0",
    "highlight.js": "^9.13.1",
    "isomorphic-unfetch": "^3.0.0",
    "marksy": "^6.1.0",
    "next": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "nprogress": "^0.2.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "raw-loader": "^0.5.1",
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/next": "^7.0.5",
    "@types/nprogress": "0.0.29",
    "@types/react": "^16.7.11",
    "blog-o-matic": "^3.0.3",
    "husky": "^1.2.0",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.1"
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "corejs": false,
          "helpers": true,
          "regenerator": true,
          "useESModules": false
        }
      ],
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint build",
      "pre-publish": "npm-run-all test build"
    }
  }
}
