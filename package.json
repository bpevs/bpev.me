{
  "name": "benpevsner.com",
  "version": "1.0.0",
  "description": "A homepage or something",
  "main": "index.html",
  "homepage": "http://benpevsner.com",
  "author": "Ben Pevsner",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivebencrazy/benpevsner.com.git"
  },
  "scripts": {
    "deploy": "CI=true npm run build",
    "start": "npm-run-all serve watch",
    "postbuild": "cp ./build/index.html ./build/404.html",
    "prebuild": "mkdir -p ./build",
    "build": "npm-run-all -p build:*",
    "build:assets": "rm -rf build/assets && cp -rp source/assets build/assets",
    "build:markup": "pug ./source --out ./build",
    "build:styles": "stylus ./source -o ./build",
    "serve": "static ./build",
    "watch": "npm-run-all -p watch:*",
    "watch:markup": "npm run build:markup -- --watch",
    "watch:styles": "npm run build:styles -- --watch"
  },
  "devDependencies": {
    "node-static": "^0.7.10",
    "npm-run-all": "^4.1.2",
    "pug": "^2.0.1",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5"
  }
}
