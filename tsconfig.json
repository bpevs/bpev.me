{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "paths": {
      "*": [
        "node_modules/*",
        "/node_modules/*"
      ]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "exclude": [
    "**/*.test.js",
    "**/*.test.jsx",
  ],
  "include": [
    "components/**/*",
    "pages/**/*",
    "utilities/**/*",
    "declarations.d.ts",
    "jestsetup.js",
  ]
}
