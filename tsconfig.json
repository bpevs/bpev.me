{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "outDir": "placeholder",
    "paths": {
      "*": [
        "node_modules/*",
        "/node_modules/*"
      ]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "target": "ES6"
  },
  "exclude": [
    "**/*.css"
  ],
  "include": [
    "components/**/*",
    "pages/**/*",
    "utilities/**/*",
    "declarations.d.ts"
  ]
}
