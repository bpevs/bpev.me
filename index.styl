@keyframes full-rotation {
  0% {
    transform: scale(0.7) rotate(0deg)
  }
  100% {
    transform: scale(0.7) rotate(360deg)
  }
}

body
  height: 100%
  left: 0
  overflow: hidden
  position: absolute
  top: 0
  width: 100%

.large-square
  animation: full-rotation 60s linear infinite
  height: 100%
  left: 0
  overflow: hidden
  position: absolute
  top: 0
  width: 100%
  z-index: 1

.square
  backface-visibility: hidden
  box-shadow: 0px 0px 90px 0px rgba(50, 50, 50, 0.8) inset
  height: 90%
  left: 50%
  overflow: hidden
  position: absolute
  top: 50%
  transform: translateY(-50%) translateX(-50%) translateZ(0) rotate(55deg)
  transition: transform 1.5s ease-in-out
  width: 70%
  z-index: 1

.square:active,
.square:focus,
.square:hover
  transform: translateY(-50%) translateX(-50%) translateZ(0) rotate(112.5deg) scale(1.05)

.first
  background-color: white
  box-shadow: none

.info
  bottom: 0
  color: black
  font-family:-apple-system, BlinkMacSystemFont, "avenir next", avenir, "helvetica neue", helvetica, ubuntu, roboto, noto, "segoe ui", arial, sans-serif
  font-weight: bold
  position: fixed
  text-align: center
  user-select: none
  width: 100%
  z-index: 2

.info a
  display: inline-block
  padding: 0.5rem
  vertical-align: middle

.info a.name
  color: black
  font-size: 65px
  margin: 0
  padding-bottom: 0.7rem

.github path,
.youtube path
  transition: fill 0.3s ease-in-out

.github:focus path,
.github:hover path
  fill: #161614

.youtube:focus path,
.youtube:hover path
  fill: #E52D27
