{
  "importMap": "./import_map.json",
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/,local_notes/,styles/ dev.ts --env=DEVELOPMENT",
    "start": "deno run -A --unstable main.ts --dev=PRODUCTION",
    "check": "deno check main.ts",
    "hash": "deno run -A scripts/gen_pass_hash.ts",
    "photos": "deno run -A scripts/build_photo_cache.ts"
  },
  "fmt": {
    "proseWrap": "never",
    "singleQuote": true,
    "semiColons": false,
    "exclude": ["components/markup"]
  },
  "lint": {
    "exclude": ["apps/", "components/markup"]
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
