{
  "importMap": "./import_map.json",
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/ dev.ts --env=DEVELOPMENT",
    "start": "deno run -A main.ts --dev=PRODUCTION",
    "start:maps": "deno run --allow-read --allow-env --allow-net --watch apps/map/serve.ts"
  },
  "fmt": {
    "options": {
      "proseWrap": "never",
      "singleQuote": true,
      "semiColons": false
    },
    "files": {
      "exclude": ["apps/", "components/markup"]
    }
  },
  "lint": {
    "files": {
      "exclude": ["apps/", "components/markup"]
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
