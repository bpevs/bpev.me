{
  "tasks": {
    "dev": "deno run -A --unstable --watch=static/,routes/,local_notes/,styles/ dev.ts --env=DEVELOPMENT",
    "start": "deno run -A --unstable main.ts --dev=PRODUCTION",
    "check": "deno check main.ts",
    "hash": "deno run -A scripts/gen_pass_hash.ts",
    "photos": "deno run -A scripts/build_local_photo_cache.ts '/Users/ben/Vault/10-19 Notes/18 bpev.me/13.01 static'",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts"
  },
  "fmt": {
    "proseWrap": "never",
    "singleQuote": true,
    "semiColons": false,
    "exclude": [
      "components/markup",
      "_fresh"
    ]
  },
  "lint": {
    "exclude": [
      "apps/",
      "components/markup",
      "_fresh"
    ],
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "imports": {
    "@/": "./",
    "$civility/": "https://raw.githubusercontent.com/bpevs/civility/0.3.0/",
    "$fresh/": "https://deno.land/x/fresh@1.6.1/",
    "$std/": "https://deno.land/std@0.211.0/",
    "preact": "https://esm.sh/preact@10.15.1",
    "preact/": "https://esm.sh/preact@10.15.1/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.1",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
    "parsedown": "https://deno.land/x/parsedown@1.4.1/mod.ts",
    "imagemagick": "https://deno.land/x/imagemagick_deno@0.0.26/mod.ts"
  }
}
